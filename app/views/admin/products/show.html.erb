<div class="row">
	<div class="col-md-8">產品照片:<br><%= image_tag(@product.product_img_url(:normal)) if @product.product_img.present? %>
	</div>
	<div class="col-md-4">
		<div class="row">產品名稱：<%= @product.title %></div>
		<div class="row">產品描述：<%= @product.description %></div>
		<div class="row">價格表：</div>

	</div>
</div>

<div class="row">
	<div class="col-md-8"></div>
	<div class="col-md-4">
		<div class="row">數量：(下拉式選單)  | 放入購物車的button</div>
		<%= simple_form_for [:admin , @sales_ticket], :html => {:class => "form-horizontal"} do |f| %>
		<div class="col-md-4">
		<%= f.input :quantity, label: "數量", collection: 1..10 , include_blank: false %>
		</div>
		<div class="col-md-1">
		<%= f.button :submit %>
		</div> 
		<% end %> 		

</div>


